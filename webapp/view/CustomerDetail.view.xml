<mvc:View
  controllerName="odata.controller.CustomerDetail"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:core="sap.ui.core">

  <Page
    id="customerDetailPage"
    title="{CompanyName}"
    showNavButton="true"
    navButtonPress=".onNavBack">

    <VBox id="customerDetailVBox" class="sapUiSmallMargin">
      
      <Text id="textLabelCustomerId" text="Customer ID:" />
      <Text id="textCustomerId" text="{CustomerID}" />

      <Text id="textLabelContactName" text="Contact Name:" />
      <Text id="textContactName" text="{ContactName}" />

      <Text id="textLabelCity" text="City:" />
      <Text id="textCity" text="{City}" />

      <Text id="textLabelCountry" text="Country:" />
      <Text id="textCountry" text="{Country}" />

      <Link
        id="linkViewOrders"
        text="View Orders"
        press=".onOrdersPress"
        class="sapUiLargeMarginTop sapUiSmallMarginBottom sapMTitle" />

    </VBox>

  </Page>
</mvc:View>
